# # Try to extract if download succeeded
# RUN if [ -f clang+llvm-15.0.0-x86_64-linux-gnu-ubuntu-18.04.tar.xz ]; then \
#         tar -xf clang+llvm-15.0.0-x86_64-linux-gnu-ubuntu-18.04.tar.xz && \
#         mv clang+llvm-15.0.0-x86_64-linux-gnu-ubuntu-18.04 llvm && \
#         rm clang+llvm-15.0.0-x86_64-linux-gnu-ubuntu-18.04.tar.xz; \
#     fi

# Set environment variables (use system LLVM if download failed)
ENV PATH="/usr/lib/llvm-22/bin:${PATH}"
ENV LD_LIBRARY_PATH="/usr/lib/llvm-22/lib"
ENV LLVM_DIR="/usr/lib/llvm-22/lib/cmake/llvm"
ENV MLIR_DIR="/usr/lib/llvm-22/lib/cmake/mlir"

# Install mlir-opt and mlir-translate from apt
RUN apt-get update && apt-get install -y \
    mlir-22-tools \
    libmlir-22-dev \
    libssl-dev \
    openssl \
    && rm -rf /var/lib/apt/lists/*

# Create symlinks for MLIR tools
RUN ln -sf /usr/lib/llvm-22/bin/mlir-opt /usr/bin/mlir-opt && \
    ln -sf /usr/lib/llvm-22/bin/mlir-translate /usr/bin/mlir-translate

# Verify installations
RUN clang --version && \
    llvm-config --version && \
    which mlir-opt && mlir-opt --version && \
    which mlir-translate && mlir-translate --version

# Copy project files
WORKDIR /app
COPY . .

# Build MLIR obfuscation passes
WORKDIR /app/mlir-obs
RUN mkdir -p build && cd build && \
    cmake .. \
        --log-level=VERBOSE \
        -G Ninja \
        -DCMAKE_BUILD_TYPE=Release \
        -DLLVM_DIR=/usr/lib/llvm-22/lib/cmake/llvm \
        -DMLIR_DIR=/usr/lib/llvm-22/lib/cmake/mlir && \
    ninja

# Verify the library was built
RUN ls -la /app/mlir-obs/build/lib/ || echo "Warning: MLIR library not found"

# ============================================================================
# BUILD CLANGIR (LLVM 22.0.0) - OPTIONAL FRONTEND (ADDITIVE ONLY)
# ============================================================================
WORKDIR /opt
RUN git clone --depth=1 --branch release/22.x https://github.com/llvm/llvm-project.git clangir-source || \
    echo "ClangIR source download failed, skipping..."

# Build ClangIR if source was downloaded
RUN if [ -d "/opt/clangir-source" ]; then \
        cd /opt/clangir-source && \
        mkdir -p build && cd build && \
        cmake ../llvm \
            -G Ninja \
            -DCMAKE_BUILD_TYPE=Release \
            -DLLVM_ENABLE_PROJECTS="clang;mlir" \
            -DLLVM_TARGETS_TO_BUILD="X86" \
            -DCLANG_ENABLE_CIR=ON \
            -DCMAKE_INSTALL_PREFIX=/opt/clangir \
            -DLLVM_ENABLE_ASSERTIONS=OFF && \
        ninja clang clangir && \
        ninja install || \
        echo "ClangIR build failed, continuing without it..."; \
    fi

# Add ClangIR to PATH if it exists (doesn't override existing clang)
RUN if [ -d "/opt/clangir/bin" ]; then \
        ln -sf /opt/clangir/bin/clangir /usr/local/bin/clangir || true; \
    fi

# Verify optional frontends (non-fatal)
RUN echo "=== Verifying Optional Frontends ===" && \
    (clangir --version 2>/dev/null && echo "✅ ClangIR available") || echo "⚠️  ClangIR not available (optional)" && \
    echo "=== Core tools (required) ===" && \
    clang --version && \
    mlir-opt --version

# Install Python dependencies
WORKDIR /app/cmd/llvm-obfuscator
RUN pip3 install -r requirements.txt || echo "No requirements.txt found"

# Set working directory back to root
WORKDIR /app

# Make test scripts executable
RUN chmod +x tests/run_integration_tests.sh 2>/dev/null || true
RUN chmod +x tests/test_mlir_passes_only.sh 2>/dev/null || true

# Default command
CMD ["/bin/bash"]